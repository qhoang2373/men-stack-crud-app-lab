    <title>Cars Show Page</title>
</head>
<body>
    <h1>Cars Show Page</h1>
    <h2><%=car.make %> <%= car.model %></h2>
    <% if (car.isFast) { %>
        <p>This Car is Built for Speed</p>
        <% } else { %>
            <p>This Car is slow!</p>
            <% } %>

 <form method="POST" action="/cars/<%= car._id%>?_method=DELETE">
    <button type="submit">Delete Car</button>
 </form>  
    
</body>
</html>